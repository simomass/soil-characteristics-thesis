% beamer specific options

               \mode<presentation> %refers to the first four modes (beamer,handout,second and trans). That is, to all modes except the article mode
{

%----------------------------------------------------------------------------------------------------------------------------------

% title page
%% definitions for fonts of the different elements
  
               \setbeamerfont{institute}{family=\rmfamily, size = \footnotesize}
               \setbeamerfont{title}{family=\rmfamily, size = \Large, series=\bfseries} 
               \setbeamerfont{subtitle}{family=\rmfamily, size = \normalsize, series=\bfseries}
               \setbeamerfont{author}{family=\rmfamily, size = \footnotesize}
               \setbeamerfont{date}{family=\rmfamily, size = \scriptsize}

               \setbeamertemplate{title page}
   {

%% setting the above deffinitions
		
%        \begin{minipage}[c][\textheight][t]{0.5\textwidth}

                  \centering
				  \vspace{10pt}
%\begin{flushright}                 
{\usebeamerfont{institute}\usebeamercolor[white]{title}\insertinstitute}
%\end{flushright}
\vspace*{20pt}
			\hfill
			\begin{columns}[T]%[\textheight][c]{\textwidth}%\justifying
				\column{.33\textwidth}
				\column{.65\textwidth}
				\begin{flushright}
                 {\usebeamerfont{title}\usebeamercolor[fg]{title}\inserttitle}\vspace*{10pt}

                 {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle}\vspace*{15pt}

                 {\usebeamerfont{author}\insertauthor}\vspace*{5pt}

                 {\usebeamerfont{date}\insertdate}\vspace*{\baselineskip}
				\end{flushright}
			\end{columns}
%         \end{minipage}
   }
  
%----------------------------------------------------------------------------------------------------------------------------------
  
% final page

                  \defbeamertemplate{final page}{text}[1]
   {
         \begin{minipage}[c][\textheight][c]{\textwidth}
                  \centering
                  #1
         \end{minipage}
   }
                  \newcommand{\finalpage}[1]
   {
                  \setbeamertemplate{final page}[text]{#1}
                  \usebeamertemplate{final page}
   }

%----------------------------------------------------------------------------------------------------------------------------------
  
% add the feather to the background of the titlepage and the final page

                  \newcommand{\1}
   {
                  \setbeamertemplate{background}
      {
                  \includegraphics[width=\paperwidth,height=\paperheight]{Feathergraphics/1}
                  \tikz[overlay] \fill[fill opacity=0,fill=white] (0,0) rectangle (-\paperwidth,\paperheight);
       }
    }

%----------------------------------------------------------------------------------------------------------------------------------
  
% use numbers instead of a picture for the references

                  \setbeamertemplate{bibliography item}[text]

}

